#pragma once
#include <string>
#include <iostream>
using namespace std;
class vectores
{
private:
	int n;
	string v1[100],v2[100],v3[100],m[30][3];
public:
	vectores(int n);
	void cargarvectores();
	void mostrarmat();
};


#include "StdAfx.h"
#include "vectores.h"
#include <string>
#include <iostream>

using namespace std;


vectores::vectores(int _n)
{
	n=_n;
}
void vectores::cargarvectores()
{
	cout<<"ingrese su primer vector: "<<endl;
	for(int i=0;i<n;i++)
	{
		cin>>v1[i];
	}
	cout<<"ingrese su segundo vector: "<<endl;
	for(int i=0;i<n;i++)
	{
		cin>>v2[i];
	}
	cout<<"ingrese su tercer vector: "<<endl;
	for(int i=0;i<n;i++)
	{
		cin>>v3[i];
	}
}
void vectores::mostrarmat()
{
	int x=n*3;
		for(int j=0;j<n;j++)
		{
			for(int k=0;k<3;k++)
			{
				cout<<v1[j]<<" ";
			}
			cout<<endl;

		}
		cout<<endl;
		for(int j=0;j<n;j++)
		{
			for(int k=0;k<3;k++)
			{
				cout<<v2[j]<<" ";
			}
			cout<<endl;

		}
		cout<<endl;
	for(int j=0;j<n;j++)
		{
			for(int k=0;k<3;k++)
			{
				cout<<v3[j]<<" ";
			}
			cout<<endl;

		}
	cout<<endl;
		
}

