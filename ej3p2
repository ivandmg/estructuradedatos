#pragma once
#define MAX 100
class promedio
{
private:
	float vec[MAX],tam;
public:
	promedio(void);
	~promedio(void);
	void cargar(float vec[], int tam);
float promedio2(float vec[], int tam);
};


#include "StdAfx.h"
#include "promedio.h"
#include <iostream>

using namespace std;


promedio::promedio(void)
{
}


promedio::~promedio(void)
{
}
void promedio::cargar(float vec[], int tam)
{
	for(int i=0;i<tam;i++)
		cin>>vec[i];
}
float promedio::promedio2(float vec[], int tam)
{
	float sum=0,res;
	for(int i=0;i<tam;i++)
	{
		sum=sum+vec[i];
	}
	res=sum/tam;
	return res;
}

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "promedio.h"
#define MAX 100

using namespace std;

void main()
{
	float vec[MAX];
	int tam;
	promedio promedio1;
	cout<<"ingrese el tamaÃ±o de su vector";
	cin>>tam;
	promedio1.cargar(vec,tam);
	cout<<"el promedio es: ";
	cout<<promedio1.promedio2(vec,tam)<<endl;
